<div class="container">
  <form>
    <div class="form-group row">
      <label for="baseCurrency" class="col-sm-2 col-form-label">Base currency</label>
      <div class="col-sm-10">
        <select class="form-control" id="baseCurrency">
          <option>AUD</option>
          <option>BGN</option>
          <option>BRL</option>
          <option>CAD</option>
        </select>
      </div>
    </div>
    <div class="form-group row">
      <label for="targetCurrency" class="col-sm-2 col-form-label">Target currency</label>
      <div class="col-sm-10">
        <select class="form-control" id="targetCurrency">
          <option>AUD</option>
          <option>BGN</option>
          <option>BRL</option>
          <option>CAD</option>
        </select>
      </div>
    </div>
    <div class="form-group row">
      <label for="amount" class="col-sm-2 col-form-label">Amount</label>
      <div class="col-sm-push-2 col-sm-10">
        <input type="number" class="form-control" id="amount" placeholder="Amount">
      </div>
    </div>
    <div class="form-group row">
      <label for="amount" class="col-sm-2 col-form-label">Max. waiting time</label>
      <div class="col-sm-10">
        <input type="number" class="form-control" id="amount" placeholder="1 - 25" min="1" max="25">
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10 order-sm-12">
        <button type="submit" class="btn btn-primary">Calculate</button>
      </div>
    </div>
  </form>
</div>